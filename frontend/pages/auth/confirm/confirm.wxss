/* pages/auth/confirm/confirm.wxss */
.confirm-container {
  height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.status-bar {
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx;
  font-size: 28rpx;
  background-color: white;
}

.status-icons {
  display: flex;
  gap: 16rpx;
}

.nav-bar {
  height: 176rpx;
  background-color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #e0e0e0;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

.content {
  flex: 1;
  padding: 64rpx;
}

.user-card {
  background-color: white;
  border-radius: 24rpx;
  padding: 48rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
}

.avatar-section {
  margin-right: 32rpx;
}

.avatar-icon {
  font-size: 120rpx;
  color: #1976d2;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.user-detail,
.user-id {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  font-size: 32rpx;
  color: #666666;
}

.user-detail:last-child,
.user-id {
  margin-bottom: 0;
}

.detail-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.role-confirm {
  background-color: #e8f5e8;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 48rpx;
}

.confirm-item {
  display: flex;
  align-items: center;
}

.confirm-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.confirm-text {
  font-size: 32rpx;
  color: #4caf50;
  font-weight: 500;
}

.enter-section {
  margin-bottom: 48rpx;
}

.enter-button {
  width: 100%;
  height: 96rpx;
  background-color: #4caf50;
  color: white;
  border-radius: 16rpx;
  font-size: 36rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.relogin-section {
  text-align: center;
}

.relogin-text {
  font-size: 28rpx;
  color: #1976d2;
  text-decoration: underline;
}

.bottom-spacer {
  height: 600rpx;
}
