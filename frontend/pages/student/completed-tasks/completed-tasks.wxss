/* pages/student/completed-tasks/completed-tasks.wxss */
.completed-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 导航栏 */
.nav-bar {
  height: 120rpx;
  background-color: #4caf50;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.nav-title {
  display: flex;
  align-items: center;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
}

/* 任务列表 */
.task-list {
  flex: 1;
  padding: 0 32rpx;
}

.task-item {
  background-color: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 24rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.task-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.task-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.task-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.task-status {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: white;
  background-color: #4caf50;
}

.task-info {
  margin-bottom: 16rpx;
}

.info-text {
  font-size: 28rpx;
  color: #666666;
}

.task-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.teacher-info,
.score-info {
  display: flex;
  align-items: center;
}

.teacher-icon,
.score-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.teacher-name,
.score-text {
  font-size: 28rpx;
  color: #666666;
}

.score-text {
  color: #ff9800;
  font-weight: bold;
}

.task-actions {
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  font-size: 28rpx;
  color: #1976d2;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  background-color: rgba(25, 118, 210, 0.1);
}

/* 加载状态 */
.load-more,
.no-more {
  text-align: center;
  padding: 32rpx;
  color: #666666;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  color: #cccccc;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
}
