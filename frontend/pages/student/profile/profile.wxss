/* pages/student/profile/profile.wxss */
.profile-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 状态栏 */
.status-bar {
  height: 44px;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 16px;
  font-size: 14px;
  color: #333;
}

.status-icons {
  display: flex;
  gap: 4px;
}

/* 导航栏 */
.nav-bar {
  height: 56px;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-bottom: 1px solid #e0e0e0;
}

.nav-title {
  font-size: 18px;
  font-weight: 600;
  color: #333;
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 16px;
  overflow-y: auto;
}

/* 用户信息卡片 */
.user-card {
  background-color: #fff;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
  display: flex;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.user-avatar {
  width: 60px;
  height: 60px;
  border-radius: 30px;
  background-color: #007aff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16px;
}

.avatar-text {
  color: #fff;
  font-size: 24px;
  font-weight: 600;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 18px;
  font-weight: 600;
  color: #333;
  margin-bottom: 4px;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.student-id {
  font-size: 14px;
  color: #666;
}

.major {
  font-size: 14px;
  color: #666;
}

/* 统计卡片 */
.stats-card {
  background-color: #fff;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr 1fr;
  gap: 16px;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 20px;
  font-weight: 700;
  color: #007aff;
  margin-bottom: 4px;
}

.stat-label {
  font-size: 12px;
  color: #666;
}

/* 菜单区域 */
.menu-section {
  background-color: #fff;
  border-radius: 12px;
  margin-bottom: 16px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 16px 20px;
  border-bottom: 1px solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 20px;
  margin-right: 12px;
  width: 24px;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 16px;
  color: #333;
}

.menu-arrow {
  font-size: 16px;
  color: #ccc;
}

/* 退出登录按钮 */
.logout-section {
  margin-top: 32px;
  margin-bottom: 32px;
}

.logout-btn {
  width: 100%;
  height: 48px;
  background-color: #ff3b30;
  color: #fff;
  border: none;
  border-radius: 12px;
  font-size: 16px;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logout-btn:active {
  background-color: #d70015;
}
