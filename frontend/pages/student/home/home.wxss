/* pages/student/home/home.wxss */
.home-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  width: 100%;
  box-sizing: border-box;
}

/* 导航栏 */
.nav-bar {
  height: 120rpx;
  background-color: #1976d2;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  color: white;
  box-sizing: border-box;
}

.nav-title {
  display: flex;
  align-items: center;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.title-text {
  font-size: 36rpx;
  font-weight: bold;
}

.task-count {
  font-size: 28rpx;
  margin-left: 8rpx;
  color: #ffe082;
}

.nav-search {
  padding: 16rpx;
}

.search-icon {
  font-size: 36rpx;
}

/* 筛选栏 */
.filter-bar {
  height: 112rpx;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
  border-bottom: 1rpx solid #e0e0e0;
  box-sizing: border-box;
}

.filter-item {
  display: flex;
  align-items: center;
  background-color: white;
  padding: 16rpx 24rpx;
  border-radius: 20rpx;
  margin-right: 24rpx;
  font-size: 28rpx;
  color: #333333;
  border: 1rpx solid #e0e0e0;
}

.filter-arrow {
  margin-left: 8rpx;
  color: #666666;
  font-size: 24rpx;
}

.refresh-btn {
  margin-left: auto;
  padding: 16rpx;
}

.refresh-icon {
  font-size: 32rpx;
  color: #1976d2;
}

/* 任务列表 */
.task-list {
  flex: 1;
  padding: 0 32rpx;
  box-sizing: border-box;
  width: 100%;
}

.task-item {
  background-color: white;
  border-radius: 24rpx;
  padding: 32rpx;
  margin: 24rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  width: 100%;
}

/* 任务头部 */
.task-header {
  margin-bottom: 24rpx;
}

.task-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.task-icon {
  font-size: 32rpx;
  margin-right: 16rpx;
}

.task-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.task-status {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: white;
}

.status-submitted {
  background-color: #4caf50;
}

.status-pending {
  background-color: #ff9800;
}

.status-urgent {
  background-color: #f44336;
}

.status-expired {
  background-color: #9e9e9e;
}

/* 任务描述 */
.task-description {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.desc-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
  color: #666666;
  margin-top: 4rpx;
}

.desc-text {
  flex: 1;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.5;
}

/* 时间信息 */
.task-time {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.time-icon {
  font-size: 28rpx;
  margin-right: 16rpx;
}

.time-text {
  font-size: 28rpx;
  color: #f44336;
  font-weight: 500;
}

/* 元信息 */
.task-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.teacher-info,
.submit-stats {
  display: flex;
  align-items: center;
}

.teacher-icon,
.stats-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
}

.teacher-name,
.stats-text {
  font-size: 28rpx;
  color: #666666;
}

/* 操作按钮 */
.task-actions {
  display: flex;
  justify-content: flex-end;
}

.submit-btn {
  background-color: #1976d2;
  color: white;
  border-radius: 20rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
}

/* 加载状态 */
.load-more,
.no-more {
  text-align: center;
  padding: 32rpx;
  color: #666666;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  color: #cccccc;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
}
