/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "PingFang SC",
    "Hiragino Sans GB", "Microsoft YaHei", "Helvetica Neue", Helvetica, Arial,
    sans-serif;
}

/* 主色调 */
.primary-color {
  color: #1976d2;
}

.primary-bg {
  background-color: #1976d2;
}

.success-color {
  color: #4caf50;
}

.success-bg {
  background-color: #4caf50;
}

.warning-color {
  color: #ff9800;
}

.warning-bg {
  background-color: #ff9800;
}

.error-color {
  color: #f44336;
}

.error-bg {
  background-color: #f44336;
}

/* 通用按钮样式 */
.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  border: none;
  outline: none;
}

.btn-primary {
  background-color: #1976d2;
  color: white;
}

.btn-success {
  background-color: #4caf50;
  color: white;
}

.btn-warning {
  background-color: #ff9800;
  color: white;
}

.btn-danger {
  background-color: #f44336;
  color: white;
}

.btn-outline {
  background-color: transparent;
  border: 2rpx solid #1976d2;
  color: #1976d2;
}

.btn-disabled {
  background-color: #cccccc;
  color: #666666;
}

/* 卡片样式 */
.card {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 输入框样式 */
.input-group {
  margin-bottom: 32rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 16rpx;
}

.input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 32rpx;
  background-color: white;
}

.input:focus {
  border-color: #1976d2;
}

/* 状态标签 */
.status-tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: white;
}

.status-pending {
  background-color: #ff9800;
}

.status-submitted {
  background-color: #4caf50;
}

.status-late {
  background-color: #f44336;
}

.status-active {
  background-color: #2196f3;
}

.status-expired {
  background-color: #9e9e9e;
}

/* 文本样式 */
.text-primary {
  color: #1976d2;
}

.text-success {
  color: #4caf50;
}

.text-warning {
  color: #ff9800;
}

.text-danger {
  color: #f44336;
}

.text-muted {
  color: #666666;
}

.text-secondary {
  color: #999999;
}

/* 间距 */
.mt-16 {
  margin-top: 16rpx;
}
.mt-32 {
  margin-top: 32rpx;
}
.mb-16 {
  margin-bottom: 16rpx;
}
.mb-32 {
  margin-bottom: 32rpx;
}
.ml-16 {
  margin-left: 16rpx;
}
.mr-16 {
  margin-right: 16rpx;
}

.p-16 {
  padding: 16rpx;
}
.p-32 {
  padding: 32rpx;
}
.px-16 {
  padding-left: 16rpx;
  padding-right: 16rpx;
}
.py-16 {
  padding-top: 16rpx;
  padding-bottom: 16rpx;
}

/* 布局 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  align-items: center;
  justify-content: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-align-center {
  align-items: center;
}

.flex-1 {
  flex: 1;
}
